{
    "presets": ["next/babel"],
    "plugins": [
        ["module-resolver", {
            "extensions": [".js", ".jsx", ".es", ".es6", ".ts", ".tsx",  ".mjs"],
            "root": ["."],
            "alias": {
              "@component": "./src/component",
              "@template": "./src/template",
              "@lib": "./src/lib",
              "@colors": "./src/theme/colors"
            }
        }],
        ["styled-components", { "ssr": true }]
        
    ]
}